<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1><%= pagetitle %></h1>
        <% if(products.length == 0) { %>
            <p>Sorry, Out of Stock For Now !!</p>
        <% } else { %>
            <% for (let product of products) { %>
                <div>
                <p><%= product.title %></p>
                <p><form action = "/admin/edit/<%= product._id %>" method = "POST"><input type = "hidden" name = "_csrf" value = "<%= csrfToken %>"><button type = "submit">Edit</button></form></p>
                <p><form action = "/admin/delete/<%= product._id %>" method = "POST"><input type = "hidden" name = "_csrf" value = "<%= csrfToken %>"><button type = "submit">Delete</button></form></p>
                </div>
            <% } %>
        <% } %>    
    </main>
<%- include('../includes/end.ejs') %>