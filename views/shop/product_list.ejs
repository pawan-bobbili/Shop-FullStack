<%- include('../includes/head.ejs') %>
</head>
<body>
    <%- include('../includes/navigation.ejs') %>
    <main>
        <h1><%= pagetitle %></h1>
        <% if(products.length == 0) { %>
            <p>Sorry, Out of Stock For Now !!</p>
        <% } else { %>
            <% for (let product of products) { %>
                <div>
                    <p><%= product.title %> <img src="/<%= product.imgUrl %>"></p>
                    <% if(logged) { %>
                        <p><form action="/addtocart" method = "POST"><input type = "hidden" name = "id" value = "<%= product._id %>"><input type = "hidden" name = "_csrf" value = "<%= csrfToken %>"><button type = "submit">Add To Cart</button></form></p>
                    <% } %>
                    <p><form action = "/details/<%= product._id %>" method = "POST"><input type = "hidden" name = "_csrf" value = "<%= csrfToken %>"><button type = "submit">Get Description</button></form></p>
                </div>
            <% } %>
        <% } %>    
    </main>
<%- include('../includes/end.ejs') %>